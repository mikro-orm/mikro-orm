{
  "compilerOptions": {
    "module": "Node16",
    "target": "es2022",
    "lib": ["es2022"],
    "declaration": true,
    "sourceMap": false,
    "strict": true,
    "esModuleInterop": true,
    "preserveConstEnums": true,
    "forceConsistentCasingInFileNames": true,
    "noImplicitOverride": true,
    "noImplicitReturns": true,
    "skipLibCheck": true, // because of ts-morph being not compatible with TS 5.4 yet
  },
  "exclude": [
    "**/node_modules",
    "**/dist"
  ]
}

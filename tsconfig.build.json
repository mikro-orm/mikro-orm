{
  "compilerOptions": {
    "module": "NodeNext",
    "target": "es2022",
    "lib": ["es2023"],
    "declaration": true,
    "sourceMap": false,
    "strict": true,
    "esModuleInterop": true,
    "preserveConstEnums": true,
    "forceConsistentCasingInFileNames": true,
    "noImplicitOverride": true,
    "noImplicitReturns": true,
  },
  "exclude": [
    "**/node_modules",
    "**/dist"
  ]
}

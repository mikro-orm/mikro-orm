{
  "compilerOptions": {
    "module": "Node16",
    "target": "es2020",
    "lib": ["es2020"],
    "moduleResolution": "Node16",
    "declaration": true,
    "sourceMap": false,
    "strict": true,
    "esModuleInterop": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "preserveConstEnums": true,
    "ignoreDeprecations": "5.0"
  },
  "exclude": [
    "**/node_modules",
    "**/dist"
  ]
}
